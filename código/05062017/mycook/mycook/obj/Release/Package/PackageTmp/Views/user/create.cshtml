@model  mycook.Models.user
@{
    ViewBag.Title = "create";

    Layout = "~/Views/Shared/_Layout.cshtml";
}



<!DOCTYPE html>

<html>

<head>
    <meta name="viewport" content="width=device-width" />

    <link href="../css/bootstrap.min.css" rel="stylesheet" type="text/css" />
