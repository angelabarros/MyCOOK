    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.number_order)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.recipe.name_recipe)
        </td>
