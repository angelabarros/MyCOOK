@model IEnumerable<mycook.Models.step>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.number_order)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.recipe.name_recipe)
        </th>
